<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                >

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I agree to a wicked and salacious misuse of anonymous location data"
            android:id="@+id/locationBox"
            android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="This app collects anonymous location data, along with data whenever your wireless isn't working to upload when you have a WiFi connection - if you're uncomfortable with this then tick the relevant boxes below, but it helps us improve King's Services!"
            android:id="@+id/textView"
            android:layout_marginTop="80dp" android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Settings"
            android:id="@+id/textView2" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I agree to an awful and irresponsible collection of data when I can&apos;t connect"
            android:id="@+id/wirelessBox"
            android:checked="false"
            android:layout_marginTop="28dp"
            android:layout_below="@+id/locationBox" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test JSON"
            android:id="@+id/button2" android:layout_alignParentBottom="true" android:layout_alignRight="@+id/textView2"
            android:layout_alignEnd="@+id/textView2" android:layout_marginBottom="66dp" android:onClick="JSONPost"/>
</RelativeLayout>
