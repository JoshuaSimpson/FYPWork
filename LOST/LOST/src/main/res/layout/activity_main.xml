<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:layout_width="165dp"
            android:layout_height="151dp"
            android:id="@+id/imageView" android:layout_gravity="center_horizontal" android:src="@drawable/kcl"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Where Am I?"
            android:id="@+id/whereami" android:layout_gravity="center_horizontal" android:onClick="whereAmI"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Route Finder"
            android:id="@+id/routeFinder" android:layout_gravity="center_horizontal" android:onClick="routeFinder"/>
</LinearLayout>