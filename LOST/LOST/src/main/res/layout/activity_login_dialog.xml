<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.simpson.josh.lost.LoginDialog">

    <EditText
            android:id="@+id/usernameBox"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:hint="K number"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <EditText
            android:id="@+id/passwordBox"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Password"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/usernameBox" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dismiss"
            android:id="@+id/dismiss"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/addWiFi" android:layout_toLeftOf="@+id/addWiFi"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set me up!"
            android:id="@+id/addWiFi"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/passwordBox" android:layout_alignEnd="@+id/passwordBox"/>
</RelativeLayout>
